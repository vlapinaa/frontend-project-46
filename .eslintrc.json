{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "import",
        "fp"
    ],
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended",
        "plugin:fp/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "import/extensions": "off",
        "no-underscore-dangle": [
            2,
            {
                "allow": [
                    "__filename",
                    "__dirname"
                ]
            }
        ],
        "fp/no-nil": "off",
        "fp/no-unused-expression": "off",
        "fp/no-throw": "off",
        "fp/no-mutating-methods": "error"
    }
}